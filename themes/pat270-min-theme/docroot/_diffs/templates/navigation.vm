<nav class="$nav_css_class" id="navigation">
	<h1>
		<span>#language ("navigation")</span>
	</h1>

	<ul>
		#foreach ($nav_item in $nav_items)
			#if ($nav_item.isSelected())
				#if ($velocityCount == 1 && $nav_item.hasChildren())
					<li aria-selected="true" class="selected first hasChildren">
				#elseif ($velocityCount == 1)
					<li aria-selected="true" class="selected first">
				#else
					<li aria-selected="true" class="selected">
				#end
			#else
				#if ($velocityCount == 1 && $nav_item.hasChildren())
					<li class="first hasChildren">
				#elseif ($velocityCount == 1)
					<li class="first">
				#else
					<li>
				#end
			#end
				<a href="$nav_item.getURL()" $nav_item.getTarget()><span>$nav_item.icon() $nav_item.getName()</span></a>

				#if ($nav_item.hasChildren())
					<ul class="child-menu">
						#foreach ($nav_child in $nav_item.getChildren())
							#if ($nav_child.isSelected())
								#if ($velocityHasNext)
									<li aria-selected="true" class="selected">
								#else
									<li aria-selected="true" class="selected last_item">
								#end
							#else
								#if ($velocityHasNext)
									<li>
								#else
									<li class="last_item">
								#end
							#end
								<a href="$nav_child.getURL()" $nav_child.getTarget()>$nav_child.getName()</a>
							</li>
						#end
					</ul>
				#end
			</li>
		#end
		<div class="clear"></div>
	</ul>
</nav>